<section class="container">
    <div class="user-box">
        <img class="image-user" src=<%= @user.photo %> alt="user"/>
        <div class="user-info">
            <p class="user-name"><%= @user.name %></p>
            <p class="user-post">Number of posts: <%= @user.PostsCounter%></p> 
        </div>   
    </div>   
    <p class="user-bio"><%= @user.bio %></p>

    <% @user.last_3_posts.each do |post| %>
        <%= link_to user_post_path(@user.id, post.id) do %>
        <div class="user-recent-post">
            <p class="post-title"><strong>Post</strong> : <%= post.title %></p>
            <p class="post-text"><%= post.text %></p>
            <h3 class="counters">Comments: <%= post.CommentSCounter %>
                Likes: <%= post.LikesCounter %><h3>             
        </div>
        <% end %>       
    <% end %>    

    <div class="button-user">
        <button class="button">
        <%= link_to "View all posts", user_posts_path(@user), class:"text-button" %>
        </button>
    </div>
</section>